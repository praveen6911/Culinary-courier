<!DOCTYPE html>
<html>
<head>
    <title>Update Seller</title>
</head>
<body>
    <h1>Update Seller</h1>
    <form action="/updateSeller/<%= seller._id %>?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div>
            <label>Username:</label>
            <input type="text" name="username" value="<%= seller.username %>" required>
        </div>
        <div>
            <label>Email:</label>
            <input type="email" name="email" value="<%= seller.email %>" required>
        </div>
        <div>
            <label>Restaurant:</label>
            <input type="text" name="restaurant" value="<%= seller.restaurant %>" required>
        </div>
        <div>
            <label>Address:</label>
            <input type="text" name="address" value="<%= seller.address %>" required>
        </div>
        <div>
            <label>Phone:</label>
            <input type="text" name="phone" value="<%= seller.phone %>" required>
        </div>
        <div>
            <label>Image:</label>
            <input type="text" name="image" value="<%= seller.image %>" required>
        </div>
        <div>
            <label>Description:</label>
            <textarea name="description" required><%= seller.description %></textarea>
        </div>
        <div>
            <label>Password:</label>
            <input type="password" name="password" value="<%= seller.password %>" required>
        </div>
        <button type="submit">Update Seller</button>
    </form>
</body>
</html>
